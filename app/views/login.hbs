<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
  </head>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <!--  CSS for Demo Purpose, don't include it in your project -->
  <link href="/css/demo.css" rel="stylesheet" />
  <style media="screen">

  *, :after, :before {
    box-sizing: border-box;
    x-sizing: border-box;
  }
  .login{
    width: 100%;
    padding: 10px 17px;
    text-align: center;
    background-color: rgba(3, 3, 3, 0.32);
    border: 2px solid #E6E9ED;
    -webkit-column-break-inside: avoid;
    max-width: 300px;
    margin: 9% auto 0 auto;
    border-radius: 10px;
  }
  .login form{
    margin: 20px 0;
    position: relative;
  }
  .login h1{
    font: 400 25px Helvetica,Arial,sans-serif;
    letter-spacing: -.05em;
    line-height: 20px;
    margin: 10px 0 30px;
  }
  .login input{
    border-radius: 3px;
    border: 1px solid #c8c8c8;
    width: 100%;
    margin: 0 0 20px;
  }
  .form-control{
    padding: 6px 12px;
    font-size: 14px;
  }
  .bg{
    position: fixed;
    top: 0;
    left: 0;

    /* Preserve aspet ratio */
    min-width: 100%;
    min-height: 100%;
  }
  h1{
    color: rgb(255, 255, 255);
  }
  .button{
    background-color: #fff;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    line-height: 1.42857143;
    border: 1px solid transparent;
    border-radius: 4px;
  }
  html {
  background: url('/img/backgroundLogin.jpg') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
.mensaje{
  color: white;
}
  </style>
  <body ng-app="loginApp" ng-controller="LoginController">

      <section class="login">
          <h1>Iniciar Sesión</h1>
          <input type="email" class="form-control" placeholder="Correo Electrónico" ng-model="paciente.email">
          <input type="password" class="form-control" placeholder="Password" ng-model="paciente.password">
          <h5 class="mensaje" ng-show="mensaje" ng-bind="mensaje"></h5>
          <button ng-click="iniciarSesion()" class="button" type="button">Ingresar</button>
      </section>

  </body>
  <script src="/lib/angular/angular.min.js" charset="utf-8"></script>
  <script src="/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="/js/bootstrap.min.js" type="text/javascript"></script>
<!-- Paper Dashboard DEMO methods, don't include it in your project! -->
<script src="/js/demo.js"></script>
  <!--  Notifications Plugin    -->
  <script src="/js/bootstrap-notify.js"></script>
  <script type="text/javascript">
    angular.module('loginApp',[]).controller('LoginController',['$scope','$http',
      function($scope, $http){
        $scope.iniciarSesion = function(){

          $http({
            method: 'POST',
            url: 'api/pacienteLogin',
            data: $scope.paciente
          }).then(function(response){
            window.location.href="/";
          },function(errorResponse){
            demo.mostrarNotificacion('danger',errorResponse.data.message);
          })
        }
      }
    ]);
  </script>
</html>
