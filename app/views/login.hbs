        $scope.iniciarSesion = function(){
          $scope.mensaje="todavía no está implementado el login :O";//Eliminar al implementar el login en el back
          $timeout(function(){ $scope.mensaje = '';}, 3000);//Eliminar al implementar el login en el back
          /*$http({
            method: 'POST',
            url:,
            data: $scope.paciente
          }).then(function(response){
            $scope.mensaje = response.data.message;
            $timeout(function(){ $scope.mensaje = '';}, 3000);
          })*/
        }
      }
    ]);
  </script>
</html>
